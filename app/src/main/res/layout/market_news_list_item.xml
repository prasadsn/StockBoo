<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.stockboo.view.custom.StockBooTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:paddingLeft="10dp"
        android:text="New Text"
        android:gravity="center_vertical"
        android:id="@+id/textView10"
        android:background="@drawable/stripheader"
        android:textSize="15sp"
        android:textColor="#009090"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@id/textView10" android:orientation="horizontal" android:id="@+id/layout">
        <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/networkImageView"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <com.stockboo.view.custom.StockBooTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView11"
            android:lines="5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView10"
            android:layout_toRightOf="@+id/networkImageView"
            android:layout_toEndOf="@+id/networkImageView"
            android:layout_alignBottom="@+id/networkImageView" />
    </LinearLayout>

    <com.stockboo.view.custom.StockBooTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView13"
        android:layout_marginRight="10dp"
        android:textSize="10sp"
        android:textColor="#009090"
        android:layout_below="@+id/layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>