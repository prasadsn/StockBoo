<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.stockboo.view.StockDetailFragment"
    android:background="@android:color/white">

    <include android:id="@+id/stock_detail" layout="@layout/current_suggestion_list_item"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:text="Messages"
            android:textColor="@color/stockboo_color_light_blue"
            android:background="@drawable/button_left_sided_round_corner_white_fill"
            android:id="@+id/button_messages"
            android:layout_gravity="left|center_vertical" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:text="News"
            android:textColor="@android:color/white"
            android:background="@drawable/button_right_sided_round_corner"
            android:id="@+id/button_news"
            android:layout_gravity="left|center_vertical" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
